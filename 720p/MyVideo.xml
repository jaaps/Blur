<window id="6">
<defaultcontrol always="true">50</defaultcontrol>
<allowoverlay>yes</allowoverlay>
  
<controls>
  <include>Background</include>
    <control type="group">
		<animation effect="slide" start="0" end="250" time="400" tween="cubic" easing="inout" condition="ControlGroup(9000).HasFocus">Conditional</animation>
<include>Header</include>						
<include>InfoList</include>
<include>List</include>
<include>Poster</include>
<include>Info</include>
<include>Horizon</include>
</control>

  <include>SideMenuBackground</include>
	<control type="grouplist" id="9000">
		<animation effect="slide" start="0" end="-250" time="400" tween="cubic" easing="inout" condition="!ControlGroup(9000).HasFocus">Conditional</animation>
		<posx>20</posx>
		<posy>90</posy>
		<width>175</width>
    <height>480</height>
		<itemgap>2</itemgap>
    <onleft>50</onleft>
    <onright>50</onright>
		<onup>9000</onup>
    <ondown>9000</ondown>
		<orientation>vertical</orientation>
        <control type="button" id="9001">
          <description>List view button</description>
          <label>List</label>
          <onclick>Container.SetViewMode(50)</onclick>
        </control>

        <control type="button" id="9002">
          <description>Info List view button</description>
          <visible>!Container.Content(secondary)</visible>
          <label>Info List</label>
          <onclick>Container.SetViewMode(51)</onclick>
        </control>


		        <control type="button" id="9003">
		          <description>Horizon view button</description>
		<visible>!Container.Content(secondary) + !Container.Content(episodes) + !Container.Content(albums) + !Container.Content(artists) + !Container.Content(songs)</visible>
		          <label>Horizon</label>
		          <onclick>Container.SetViewMode(56)</onclick>
		        </control>
		
		
				        <control type="button" id="9004">
				          <description>Poster view button</description>
<visible>!Container.Content(episodes) + !Container.Content(Pictures) + !Container.Content(albums) + !Container.Content(songs) + !Container.Content(artists) + !Container.Content(secondary)</visible>
				          <label>Panel</label>
				          <onclick>Container.SetViewMode(55)</onclick>
				        </control>




	</control>
</controls>
  
</window>