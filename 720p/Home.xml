<?xml version="1.0"?>
<window id="0">
	<defaultcontrol always="true">300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>Background</include>
		<include>Header</include>
		<control type="wraplist" id="300">
			<description>Home Wraplist</description>
			<posx>370</posx>
			<posy>0</posy>
			<width>700</width>
			<height>720</height>
			<visible>-</visible>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft>300</onleft>
			<onright>300</onright>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<itemlayout height="140">
				<control type="image">
					<posx>20</posx>
					<posy>40</posy>
					<width>50</width>
					<height>50</height>
					<info>ListItem.Thumb</info>
					<animation effect="fade" start="30" end="30" time="1" condition="Control.HasFocus(300)">Conditional</animation>
				</control>
				<control type="image">
					<posx>20</posx>
					<posy>40</posy>
					<width>50</width>
					<height>50</height>
					<visible>IsEmpty(ListItem.Thumb)</visible>
					<texture>$INFO[Listitem.Label,icons/,.png]</texture>
					<animation effect="fade" start="30" end="30" time="1" condition="Control.HasFocus(300)">Conditional</animation>
				</control>
				<control type="label">
					<posx>160</posx>
					<posy>48</posy>
					<width>400</width>
					<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					<textcolor>WhiteTrans</textcolor>
					<font>HomeMenuItemNoFocus</font>
					<scroll>false</scroll>
					<align>left</align>
				</control>
			</itemlayout>
			<focusedlayout height="140">
				<control type="image">
					<posx>0</posx>
					<posy>20</posy>
					<width>90</width>
					<height>90</height>
					<info>ListItem.Thumb</info>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="10" end="100" time="200" center="auto"/>
						<effect type="fade" start="30" end="100" time="500"/>
					</animation>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>20</posy>
					<width>90</width>
					<height>90</height>
					<visible>IsEmpty(ListItem.Thumb)</visible>
					<texture>$INFO[Listitem.Label,icons/,.png]</texture>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="10" end="100" time="200" center="auto"/>
						<effect type="fade" start="30" end="100" time="500"/>
					</animation>
				</control>
				<control type="label">
					<posx>160</posx>
					<posy>50</posy>
					<width>400</width>
					<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
					<textcolor>White</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<font>HomeMenuItem</font>
				</control>
			</focusedlayout>
			<content>
				<item id="1">
					<description>Video Plugins</description>
					<label>$LOCALIZE[3]</label>
					<onclick>xbmc.activatewindow(6)</onclick>
					<thumb>icons/icon_video.png</thumb>
				</item>
				<item id="2">
					<description>Music Plugins</description>
					<label>$LOCALIZE[2]</label>
					<onclick>xbmc.activatewindow(5)</onclick>
					<thumb>icons/icon_music.png</thumb>
				</item>
				<item id="3">
					<description>Picture Plugins</description>
					<label>$LOCALIZE[1]</label>
					<onclick>xbmc.activatewindow(2)</onclick>
					<thumb>icons/icon_pictures.png</thumb>
				</item>
				<item id="4">
					<description>Programs</description>
					<label>$LOCALIZE[0]</label>
					<onclick>xbmc.activatewindow(1)</onclick>
					<thumb>icons/icon_apps.png</thumb>
				</item>
				<item id="9">
					<description>Settings</description>
					<label>$LOCALIZE[5]</label>
					<onclick>xbmc.activatewindow(settings)</onclick>
					<thumb>icons/icon_settings.png</thumb>
				</item>
				<item id="9">
					<description>Shutdown</description>
					<label>Shutdown</label>
					<onclick>SetFocus(111)</onclick>
					<thumb>icons/icon_exit.png</thumb>
				</item>
				<item id="9">
					<description>Plex Online Menu</description>
					<label>Plex Online</label>
					<thumb>icons/icon_plex.png</thumb>
					<onclick>Plex.ActivateWindow(1,plex://localhost/system/plexonline,return)</onclick>
				</item>
			</content>
		</control>
		<control type="group" id="33">
			<posx>455</posx>
			<posy>220</posy>
			<visible allowhiddenfocus="true">ControlGroup(33).HasFocus</visible>
			<include>dialogOpen</include>
			<control type="image" id="1">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-30</posy>
				<width>370</width>
				<height>30</height>
				<texture border="29,29,29,0">dialogs/contextmenu-top.png</texture>
			</control>
			<control type="image" id="1">
				<description>background image</description>
				<posx>-1</posx>
				<posy>0</posy>
				<width>371</width>
				<height>300</height>
				<texture border="29">dialogs/contextmenu-center.png</texture>
			</control>
			<control type="image" id="1">
				<description>background bottom image</description>
				<posx>-1</posx>
				<posy>300</posy>
				<width>371</width>
				<height>30</height>
				<texture border="45,0,45,0">dialogs/contextmenu-bottom.png</texture>
			</control>
			<control type="image" id="1">
				<posx>18</posx>
				<posy>0</posy>
				<width>335</width>
				<height>1</height>
				<texture>dialogs/separator.png</texture>
			</control>
			<control type="button" id="111">
				<description>Quit Button</description>
				<label>Exit Plex</label>
				<onclick>Plex.Shutdown()</onclick>
				<posx>18</posx>
				<posy>0</posy>
				<width>335</width>
				<include>contextMenuButton</include>
			</control>
			<control type="button" id="112">
				<description>Sleep Button</description>
				<label>Sleep</label>
				<onclick>XBMC.SleepSystem()</onclick>
				<posx>18</posx>
				<posy>40</posy>
				<width>335</width>
				<include>contextMenuButton</include>
			</control>
			<control type="button" id="113">
				<description>Shut Down Button</description>
				<label>Shutdown</label>
				<onclick>XBMC.ShutDownSystem()</onclick>
				<posx>18</posx>
				<posy>80</posy>
				<width>335</width>
				<include>contextMenuButton</include>
			</control>
		</control>
	</controls>
</window>
